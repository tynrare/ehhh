{
    "compilerOptions": {
        "checkJs": true
    },
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "baseUrl": ".",
        "paths": {
            "@src/*":  ["./src/*"],
            "@core/*":  ["./src/framework/core/*"],
            "@lib/*":  ["./src/framework/lib/*"],
            "@rooms/*":  ["./src/rooms/*"],
            "@client/*":  ["./src/framework/client/*"]
        },
        "resolveJsonModule": true,
        "disableSizeLimit": true,
        "allowUmdGlobalAccess": true
    },
    "include": [
        "./src/**/*",
        "./lib/**/*",
        "./dev/workspace/*.d.ts"
    ],
    "exclude": ["node_modules"]
}
